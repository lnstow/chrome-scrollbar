{
  "manifest_version": 3,
  "name": "Transparent Scrollbar",
  "version": "1.0",
  "description": "在网页右侧添加透明滚动条",
  "permissions": [
    "storage",
    "tabs"
  ],
  "action": {
    "default_title": "Transparent Scrollbar",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "overlayscrollbars.browser.es6.min.js",
        "content.js"
      ],
      "css": [
        "overlayscrollbars.min.css",
        "custom-scrollbar.css"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "*.css",
        "*.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}